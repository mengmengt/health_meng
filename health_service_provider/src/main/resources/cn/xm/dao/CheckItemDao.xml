<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xm.dao.CheckItemDao">
    <!--插入检查项-->
    <insert id="add" parameterType="cn.xm.pojo.CheckItem">
        insert into t_checkitem (code,name,sex,age,price,type,attention,remark) VALUES (#{code},#{name},#{sex},#{age},#{price},#{type},#{attention},#{remark});
    </insert>

    <select id="selectByCondition" parameterType="String" resultType="cn.xm.pojo.CheckItem">
        select * from t_checkitem
        <if test="value != null and value.length > 0">
            where code = #{value} or  name= #{value}
        </if>
    </select>

    <!--判断检查项是否关联到检查组-->
    <select id="findCheckItemByCheckGroup" parameterType="int" resultType="long">
        select count(*) from t_checkgroup_checkitem where checkitem_id= #{checkItem_id}
    </select>

    <!--删除检查项-->
    <delete id="deleteById" parameterType="int">
        delete from t_checkitem where id = #{id}
    </delete>

    <!--编辑检查项-->
    <update id="edit" parameterType="cn.xm.pojo.CheckItem">
        update t_checkitem
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="type != null">
                type = #{type},
            </if>

            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--根据id进行查询-->
    <select id="findById" parameterType="int" resultType="cn.xm.pojo.CheckItem">
        select * from t_checkitem where id = #{id}
    </select>


    <!--查询所有检查项-->
    <select id="findAll" resultType="cn.xm.pojo.CheckItem">
        select * from t_checkitem
    </select>
</mapper>